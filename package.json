{
  "name": "athanor",
  "version": "0.6.8",
  "bugs": {
    "url": "https://github.com/lacerbi/athanor/issues"
  },
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "dev": "npm start",
    "package": "cross-env DEBUG=electron-forge:* NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make",
    "build:win": "cross-env NODE_ENV=production electron-forge make --platform win32",
    "build:linux": "cross-env NODE_ENV=production electron-forge make --platform linux",
    "lint": "eslint ./src --ext .ts,.tsx",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "electron",
    "ai-coding",
    "llm",
    "developer-tool",
    "coding-assistant",
    "prompt-engineering",
    "prompt-builder",
    "code-integration",
    "llm-chat-integration",
    "typescript",
    "react",
    "local-workflow",
    "context-management",
    "desktop-app"
  ],
  "author": "Luigi Acerbi",
  "license": "Apache-2.0",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/lacerbi"
  },
  "description": "Athanor is a desktop app for AI-assisted workflows, from coding to technical writing. Quickly orchestrate the relevant context to create effective prompts to paste into any LLM chat interface, and then efficiently integrate the AI response back into your project or codebase, always in control.",
